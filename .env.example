# ============================================
# Backend API Configuration (REQUIRED)
# ============================================
# Backend API base URL
# Development: http://localhost:5001
# Production: https://projectxbackend-production-d2b0.up.railway.app
VITE_API_BASE_URL=https://projectxbackend-production-d2b0.up.railway.app

# Socket.io URL (usually same as API base URL)
# Development: http://localhost:5001
# Production: https://projectxbackend-production-d2b0.up.railway.app
VITE_SOCKET_URL=https://projectxbackend-production-d2b0.up.railway.app

# ============================================
# Payment Gateway - Razorpay (Required for Credits Purchase)
# ============================================
# Get from: https://dashboard.razorpay.com/app/api-keys
# Use TEST keys for development
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id

# ============================================
# Google OAuth (Optional - for Google Login)
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# ============================================
# Analytics & Tracking (Optional)
# ============================================
# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Feature Flags (Optional)
# ============================================
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_PAYMENTS=true
